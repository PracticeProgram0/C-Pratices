

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>
    <div>

        <div class="profile-container">
            <div class="cover-photo">
                <img src="@Model.CoverPhotoUrl" alt="Cover Photo" style="width:100%; height:200px;" />
            </div>
            <div class="profile-info">
                <div class="profile-picture">
                    <img src="@Model.ProfilePictureUrl" alt="Profile Picture" style="width:150px; height:150px; border-radius:50%;" />
                </div>
                <h1>@Model.Name</h1>
                <p>@Model.Bio</p>
                <p><strong>Location:</strong> @Model.Location</p>
            </div>

            <h2>Friends</h2>
            <ul>
                @foreach (var friend in Model.Friends)
                {
                    <li>@friend</li>
                }
            </ul>

            <h2>Posts</h2>
            <ul>
                @foreach (var post in Model.Posts)
                {
                    <li>
                        <p>@post.Content</p>
                        <small>@post.CreatedAt.ToString("g")</small>
                    </li>
                }
            </ul>
        </div>

    </div>
</body>
</html>
