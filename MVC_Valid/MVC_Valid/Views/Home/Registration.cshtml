 

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Registration Page</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #f4f4f4;
            display: flex;
            justify-content: center;
            align-items: center;
            height: 0vh;
            margin: 0;
        }

        .container {
            background-color: #fff;
            padding: 20px;
            border-radius: 8px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
            width: 70%;
            height:30%;
            max-width: 400px;
        }

        h1 {
            margin-bottom: 20px;
            text-align: center;
        }

        form {
            display: flex;
            flex-direction: column;
        }

        label {
            margin-bottom: 5px;
            font-weight: bold;
        }

        input {
            padding: 10px;
            margin-bottom: 15px;
            border: 1px solid #ddd;
            border-radius: 4px;
            font-size: 16px;
        }

        button {
            padding: 10px;
            background-color: #007bff;
            border: none;
            color: #fff;
            font-size: 16px;
            border-radius: 4px;
            cursor: pointer;
        }

            button:hover {
                background-color: #0056b3;
            }

    </style>
</head>
<body>
    <div class="container">
        <h1>Registration Form</h1>
        @using (Html.BeginForm("Registrationp", "Home"))
        {

            <label for="fname">First Name:</label>
            <input type="text" id="fname" name="fname">
            <p>@Html.ValidationMessage("fname")</p>

            <label for="lname">Last Name:</label>
            <input type="text" id="lname" name="lname">
            <p>@Html.ValidationMessage("lname")</p>

            <label for="email">Email:</label>
            <input type="email" id="email" name="email">
            <p>@Html.ValidationMessage("email")</p>

            <label for="password">Password:</label>
            <input type="password" id="password" name="password">

            <label for="cpassword">Confirm Password:</label>
            <input type="password" id="cpassword" name="cpassword">
            <p>@Html.ValidationMessage("cpassword")</p>

            <label for="phone">Phone Number:</label>
            <input type="tel" id="phone" name="phone">
            <p>@Html.ValidationMessage("phone")</p>

            <label for="address">Address:</label>
            <input type="text" id="address" name="address">
            <p>@Html.ValidationMessage("address")</p>

            <label for="Date">Date:</label>
            <input type="text" id="Date" name="Date">
            <p>@Html.ValidationMessage("Date")</p>


            <button type="submit">Register</button>

        }
    </div>
</body>
</html>
